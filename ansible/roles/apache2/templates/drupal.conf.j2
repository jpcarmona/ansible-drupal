<VirtualHost *:80>
        ServerName {{ cname_drupal }}.{{ dns_zone }}
        ServerAdmin webmaster@localhost
        DocumentRoot /var/www/drupal

        <Directory /var/www/drupal>
                  AllowOverride All
        </Directory>

        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>